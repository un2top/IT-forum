<form>
    <div class="input-group mb-3">
        <input type="text"
               name="q"
               class="form-control"
               placeholder="Найти..."
               value="{{ app.request.query.get('q') }}"
        >
        <div class="input-group-append mb-3">
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
        </div>
        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="showDeleted" {% if app.request.query.has('showDeleted') %} checked {% endif %}>
                <label class="form-check-label">Показать удаленные</label>
            </div>
        </div>
        <div class="form-group mb-3">
            <label>На странице</label>
            
            {% set limits = [10, 20, 50] %}
            {% set selectedLimit = app.request.query.get('limit') in limits ? app.request.query.get('limit') : 20 %}
            
            <select class="form-control" name="limit">
                {% for limit in limits %}
                    <option
                        value="{{ limit }}"
                        {% if limit == selectedLimit %} selected {% endif %}
                    >{{ limit }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</form>