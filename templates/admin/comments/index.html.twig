{% extends 'base_content.html.twig' %}
{% block admin_articles %}p-4{% endblock %}
{% block content %}

    <div class="col-12 p-0">
        <div class="admin-header-with-button">
            <h1>Управление Статьями</h1>
            <div><a class="btn btn-primary" href="#">Создать новую статью</a></div>
        </div>

        <form>
            <div class="input-group mb-3">
                <input type="text"
                       name="q"
                       class="form-control"
                       placeholder="Найти..."
                       value="{{ app.request.query.get('q') }}"
                >
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="input-group mb-3">
                <div class="form-check">
                    <input type="checkbox"
                           name="showDeleted"
                           class="form-check-input"
                            {% if app.request.query.has('showDeleted') %}" checked {% endif %}
                    >
                    <label class="form-check-label">Показать удаленные</label>
                </div>

            </div>
        </form>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Статья</th>
                <th>Описание</th>
                <th>Автор</th>
                <th>Дата</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td><a href="{{ path('app_article_show', {slug: comment.article.slug}) }}">
                            {{ comment.article.title }}</a></td>
                    <td>{{ comment.content|u.truncate (40,'...') }}</td>
                    <td>{{ comment.authorName }}</td>
                    <td>{{ comment.createdAt|ago }} {% if comment.deletedAt %} DELETED {% endif  %}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Нет коментариев</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}